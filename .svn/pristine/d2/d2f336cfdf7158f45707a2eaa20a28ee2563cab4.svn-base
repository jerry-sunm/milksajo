/*****************************************
    header
*****************************************/
.nav-bar a{
	color: black;
}
.nav-bar a:hover{
	color: white !important;
	cursor: pointer;
}
header{
    float: right;
    position: fixed;
    width: 100%;
    height: 60px;
    top: 0px;
    background-color: skyblue;
    line-height: 40px;
    font-weight: bold;
}
