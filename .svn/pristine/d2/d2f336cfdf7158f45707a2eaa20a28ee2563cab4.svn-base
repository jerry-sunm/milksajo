    contents
*****************************************/
/* table setting */
.table th, .table td{
	border: 1px solid lightgray;
	text-align: center;
	font-size: 10px;
}

.table .downTd{
	maring: 0px;
	padding: 0px
}

.table .downTd button{
	border: none;
	width: 100%;
}

.table select{
	padding: 0px;
	height: 25px;
	font-size: 12px;
}

.table .btns{
	padding: 0px;
	line-height: 3;
}

.table .btns .btn{
	text-align: center;
}

.table .btn-more{
	height: 30px;
	line-height: 0;
}

