/* contents-nav style */
mgr-contents article{
	margin-top: 100px;
    margin-left: 17.5%;
    margin-right: 10%;
    width: 65%;
}

#content-view{
	display: block;
    margin-left: 17.5%;
    margin-right: 10%;
    width: 65%;
}

