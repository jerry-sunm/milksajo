			System.out.println("[에러]updateUser() 메소드의 SQL 오류 = "+e.getMessage());
		} finally {
			try {
				close(conn, ps);
			} catch (Exception e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		return rows;
	}
	
// 삭제 메소드	
