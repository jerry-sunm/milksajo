	font-weight: bold;
}


/*****************************************
    footer
*****************************************/
footer{
    width: 100%;
    height: 200px;
    margin-top: 100px;
    background-color: black;
}

footer .copyright{
    color: white;
    text-align: center;
}
/*****************************************
    다양한 form에 대한 style
*****************************************/
.error{
	color: red;
	font-weight: bold;
}

.form{
	z-index: 7;
	display: -webkit-inline-box;
}

/* form1(제일 큰 사이즈) : login, join, notice, menual */
.form1{
	padding: 40px;
	position: fixed;
    top: 10%;
    left: 10%;
    width: 80%;
    height: 80%;
	border: 1px solid lightgray;
	border-radius: 5px;
	background-color: white;
	overflow: hidden;
}

/* form2(왼쪽으로 치우침) :*/
.form2{
	padding: 40px;
	position: fixed;
    top: 10%;
    left: 10%;
    width: 450px;
    height: 80%;
	border: 1px solid lightgray;
	border-radius: 5px;
	background-color: white;
}
/* form3(정가운데) : */
.form3{
	padding: 40px;
	position: fixed;
    top: 10%;
    left: auto;
    width: 450px;
    height: 80%;
	border: 1px solid lightgray;
	border-radius: 5px;
	background-color: white;
}
.from .title-form{
	text-align: center;
}

.form .title{
    text-align: center;
    font-size: 35px;
    padding: 20px;
}

.form .exit-btn{
	border-radius: 30px;
    width: 30px;
    height: 30px;
    float: right;
}

.form .btn-group{
	float: right; 
}


.form .form-btn-group{
	padding: 10% 35%;
}

/*login_form*******************************************************/

.login-form{
	border: 1px solid lightgray;
	border-radius: 5px;
	padding: 20px;
    width: 400px;
    margin: 3%;
}

.login-form .title{
    text-align: center;
    font-size: 35px;
    padding: 20px;
    margin: 15px 32%;
}

.login-form .form-btn-group{
	padding: 5% 20%;
}

.login-form .form-btn-group .btn{
	width: 75px;
	margin: 0 5%;
}

#login-carousel{
    z-index: 10;
    top: 26px;
    left: 8%;
    width: 50%;
}

#login-carousel .w-100{
    border-radius: 10px;
    height: 38.4em;
}

/*join_form*******************************************************/

.join-form{
	border: 1px solid lightgray;
    border-radius: 5px;
    margin: 0 100px;
    padding: 20px 50px;
    height: 650px;
}

.join-form table{
	margin: 0 auto;	
}

.join-form .join-label{
    text-align: right;
}

.join-form input{
	width: 300px;
}

.join-form th{
	padding-left: 20px;
    padding-top: 10px;
}


.join-form .form-btn-group{
	padding: 8% 15%;
}

.join-form .form-btn-group .btn{
	width: 75px;
	margin: 0 10%;
}

/*notice_form*******************************************************/
.notice-form .no				{ width: 5%;}
.notice-form .employee-no		{ width: 10%;}
.notice-form .comment			{ width: 75%;}
.notice-form .date				{ width: 10%;}

.notice-form .footer-btns .btn{
	border: 1px solid lightgray;
}

/*menual_form*******************************************************/
.menual-form{
	display: inline;
}

.menual-form .content{
	width: 100%;
}
.menual-form .ele{
	height: 20%;
}


