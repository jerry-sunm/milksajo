/*****************************************
/*back ground dark space*/
.background-dark{
    background-color: black;
    position: fixed;
    width: 100%;
	    height: 100%;
    top: 0px;
    left: 0px;
    opacity: .9;
}

.alert{
    position: fixed;
    top: 0px;
    left: 0px;
    width: 100%;
    text-align: center;
    color: red;
}
.ng-hide{
   opacity: 0;
     transform: scale(0.8);
}
